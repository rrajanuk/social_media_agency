# Server Configuration
PORT=3001
NODE_ENV=development

# Admin API Key (generate a strong random string)
ADMIN_API_KEY=your-secure-api-key-here

# Database
DATABASE_PATH=./data/submissions.db

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=5

# Spam Protection
MIN_FORM_FILL_TIME_MS=2000
MAX_FORM_FILL_TIME_MS=604800000
ENABLE_CAPTCHA=false

# Cloudflare Turnstile (optional)
TURNSTILE_SECRET_KEY=

# reCAPTCHA (optional)
RECAPTCHA_SECRET_KEY=

# Email Notifications (SMTP)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@example.com
NOTIFICATION_EMAIL=admin@example.com

# Webhook Notifications (alternative to email)
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-webhook-endpoint.com/submissions
WEBHOOK_SECRET=

# CORS
CORS_ORIGIN=http://localhost:8080
