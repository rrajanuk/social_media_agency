# ===============================================================
# == PRODUCTION ENVIRONMENT EXAMPLE
# ==
# == Copy this file to .env in your production environment and
# == fill in the values.
# == NEVER commit your actual .env file to version control.
# ===============================================================

# -- Server Configuration --
# Set to 'production' to enable performance optimizations and disable debug features.
NODE_ENV=production
# The port the application will listen on. Ensure this is mapped correctly by your reverse proxy (e.g., Nginx).
PORT=3001

# -- Security --
# A strong, randomly generated key for accessing admin-only API endpoints.
# Generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_API_KEY=your-secure-production-api-key

# -- CORS --
# A comma-separated list of allowed origins. Use your actual frontend domain.
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGIN=https://your-production-domain.com

# -- Database --
# Path to the SQLite database file.
# For production, it's recommended to store this outside the application directory and ensure regular backups.
DATABASE_PATH=./data/submissions.db

# -- Rate Limiting --
# Adjust based on expected traffic. These are sensible defaults.
RATE_LIMIT_WINDOW_MS=3600000 # 1 hour
RATE_LIMIT_MAX_REQUESTS=100 # Max requests per IP per window

# -- Spam Protection --
# Recommended to be enabled in production.
ENABLE_CAPTCHA=true
MIN_FORM_FILL_TIME_MS=2000 # Minimum time in milliseconds to fill the form (2 seconds)
MAX_FORM_FILL_TIME_MS=604800000 # Maximum time (7 days)

# -- CAPTCHA Provider --
# Choose one and provide the secret key. Cloudflare Turnstile is recommended.
# Get keys from: https://dash.cloudflare.com/?to=/:account/turnstile
TURNSTILE_SECRET_KEY=your-cloudflare-turnstile-secret-key
# OR
RECAPTCHA_SECRET_KEY=

# -- Email Notifications (SMTP) --
# Enable to receive an email for each new valid submission.
SMTP_ENABLED=true
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false # Use true for port 465, false for 587 (STARTTLS)
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password-or-app-key
SMTP_FROM="Your App Name" <noreply@yourdomain.com>
NOTIFICATION_EMAIL=your-notification-email@example.com

# -- Webhook Notifications --
# An alternative or addition to email notifications.
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=
